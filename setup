#!/bin/bash

# list of files to link
filename='config_files.txt'

while IFS='' read -r line || [[ -n "$line" ]]; do
    echo "Creating link for $line"
    # remove the existing link or file
    rm -f ~/$line
    # create new link
    ln -s ${PWD}/$line ~/$line
done < "$filename"

# Reload the profile with the new options 
shell_session_update() { :; }

